<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="dataProvider" class="sk.stopangin.spring.l2.FullDataProvider">
    </bean>

    <bean id="dataService" class="sk.stopangin.spring.l2.DataServiceImpl"
          p:dataProvider-ref="dataProvider"
    >
        <!--<property name="dataProvider" ref="dataProvider"></property>-->
    </bean>

    <bean id="statisticsService" class="sk.stopangin.spring.l2.StatisticsServiceImpl"
          p:dataService-ref="dataService"></bean>

</beans>